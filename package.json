{
  "name": "calamity-chats",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/front",
    "packages/node",
    "packages/types"
  ],
  "scripts": {
    "start": "yarn workspace calamity-chats-node start",
    "dev": "lerna run --parallel dev",
    "build": "lerna run build --stream --concurrency=1",
    "rebuild-types": "lerna run build --scope calamity-chats-types && lerna exec --scope calamity-chats-front -- npm install && lerna exec --scope calamity-chats-node -- npm install"
  },
  "dependencies": {},
  "devDependencies": {
    "lerna": "^8.1.8"
  },
  "main": "index.js",
  "author": "denis.saversky@gmail.com",
  "license": "MIT"
}
